<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.KeepItDroid" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="WelcomeInitText">
        <item name="android:textSize">@dimen/sp42</item>
    </style>

    <style name="WelcomeSubtitleText">
        <item name="android:textSize">@dimen/sp28</item>
    </style>

    <style name="LoginButton">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/blue_button</item>
    </style>

    <style name="NewUserButton">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/orange_button</item>
    </style>

    <style name="ForgetPasswordText">
        <item name="android:textSize">@dimen/sp16</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NoteTitle">
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NoteContent">
        <item name="android:textSize">@dimen/sp15</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>